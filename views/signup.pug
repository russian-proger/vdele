doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Регистрация | ВДеле
  body
    form(action='/signup' method='post')
      label(for='nickname_input') Никнейм (поменять нельзя)
      br
      input#nickname_input(name='nick' type='text' required='required')
      br
      br
      label(for='first_name_input') Имя
      br
      input#first_name_input(name='first_name' type='text' required='required')
      br
      br
      label(for='last_name_input') Фамилия
      br
      input#last_name_input(name='last_name' type='text' required='required')
      br
      br
      label(for='mail_input') Почта
      br
      input#mail_input(name='mail' type='text' required='required')
      br
      br
      label(for='password') Пароль
      br
      input#password(name='password' type='password' required='required')
      br
      br
      label(for='repeat_password_input') Повторите пароль
      br
      input#repeat_password_input(name='repeat_password' type='password' required='required')
      br
      br
      input(type='submit' value='Зарегистрироваться')
